<h2 class="ui center aligned large header">
Quext - <em>Quick Message For Gamers</em>
</h2>

<h4 class="ui center aligned Large icon header">
  <i class="circular blue gamepad tiny icon"></i>
    Enter Quext Title and KeyCode
</h4>


<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Quext Title" %>
          <div class="ui left icon input">
          <%= f.text_field :username, placeholder: "Username" %>
          <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
        <%= label :password, "Quext Key" %>
          <div class="ui left icon input">
          <%= f.password_field :password, placeholder: "Quext Key" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Quextin", class: "ui blue submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big purple disabled button">
        <i class="signup icon"></i>
        Join Quext
      </div>
    </div>
  </div>
  <!-- <div class="ui vertical divider"> -->

  </div>
  </div>
